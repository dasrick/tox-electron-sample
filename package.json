{
  "name": "tox-electron-sample",
  "version": "0.0.1",
  "description": "Electronized sample application based on AngularJS (frontend) and some more ...",
  "author": "Enrico Hoffmann <dasrick@gmail.com>",
  "license": "MIT",
  "main": "main.js",
  "homepage": "https://github.com/dasrick/tox-electron-sample#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dasrick/tox-electron-sample.git"
  },
  "bugs": {
    "url": "https://github.com/dasrick/tox-electron-sample/issues"
  },
  "devDependencies": {
    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.37.2"
  },
  "scripts": {
    "start": "node_modules/.bin/electron .",

    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",

    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager ./ \"toxApp\" --out=dist/osx --platform=darwin --arch=x64 --version=0.37.2 --icon=assets/osx/icon.icns",
    "build:win": "npm run clean:win && electron-packager ./ \"toxApp\" --out=dist/win --platform=win32 --arch=ia32 --version=0.37.2 --icon=assets/win/icon.ico",

    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
